@page "/JoinSession/{id:int}"
@model QuickSurvey.Web.Pages.JoinSessionModel
@{
    Layout = "_Layout";
}

<div class="container mx-auto mt-2 p-3 max-w-lg">
    <h1 class="text-textcolor">Join Live Poll for: @Model.SessionTitle</h1>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <input type="text" asp-for="ParticipantUserName" class="mt-2 block bg-bgcolor border border-bordercolor w-full px-3 py-2 transition duration-100 ease-in-out shadow-sm focus:ring-2 focus:ring-focusbordercolor rounded focus:outline-none text-textcolor placeholder-gray-500"/>
        
        <input type="submit" value="Join Session" class="my-3 bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded focus:outline-none focus:shadow-outline disabled:border-0 disabled:opacity-50 disabled:cursor-not-allowed"/>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="my-2 border rounded border-errorboxbordercolor bg-errorboxbgcolor text-errortextcolor py-2 px-3 bg-opacity-90">
                <span asp-validation-for="ParticipantUserName"></span>
            </div>
        }
        
    </form>
</div>